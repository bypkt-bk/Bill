---
import google from "../../public/google.svg";
import logo from "../../public/logo.svg";
---

<script>
  function handleLogin() {
    window.location.href = "/home";
  }
  document.getElementById("login-button")?.addEventListener("click", handleLogin);
</script>
<div id="login">
  <img src={logo.src} alt="google" />
  <p id="header">Welcome to bill</p>
  <div id="login-section">
    <input />
    <input />
    <button id="login-button"> login </button>
    <button id="login-google-button">
      <img src={google.src} alt="google" width="24" />
    </button>
    <p>or</p>
    <button id="newaccount-button"> Create new account </button>
  </div>
</div>
<style>
  #login {
    background: white;
    height: fit-content;
    display: flex;
    padding: 78px 55px 48px 55px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 58px;
    border-radius: 20px;
    box-shadow: 4px 4px 18px 0px rgba(0, 0, 0, 0.2);
  }
  #header {
    color: var(--gibraltar, #143951);
    font-family: monospace;
    font-size: 32px;
    font-style: normal;
    font-weight: 600;
    line-height: 28px; /* 87.5% */
    letter-spacing: -0.16px;
  }
  #login-section {
    display: flex;
    width: 280px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 18px;
  }
  input {
    display: flex;
    padding: 8px 56px 8px 12px;
    align-items: center;
    align-self: stretch;
    border-radius: 6px;
    border: 1px solid var(--gibraltar, #143951);
    background: var(--white, #fff);
  }
  #login-button {
    display: flex;
    padding: 8px 16px;
    justify-content: center;
    align-items: center;
    align-self: stretch;
    border-radius: 6px;
    background: #143951;
    color: var(--white, #fff);
    font-family: monospace;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
  }
  #login-google-button {
    display: flex;
    padding: 8px;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
    box-shadow: 4px 4px 18px 0px rgba(0, 0, 0, 0.2);
  }
  #newaccount-button {
    display: flex;
    padding: 8px 16px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    align-self: stretch;
    border-radius: 6px;
    border: 1px solid var(--gibraltar, #143951);
  }
  p {
    font-family: monospace;
    font-size: 16px;
  }
</style>
