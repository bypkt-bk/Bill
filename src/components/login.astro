---
import google from '../../public/google.svg';
import logo from '../../public/logo.svg';
import ball from '../../public/ball.png';
---

<script>
  function handleLogin() {
    window.location.href = "/home/1";
  }
  document
    .getElementById("login-button")
    ?.addEventListener("click", handleLogin);
</script>
<div id="login" class="z-10">
  <img src={logo.src} alt="google" />
  <p id="header">Welcome to bill</p>
  <div id="login-section">
    <div class="relative w-full">   
      <input/>
      <small class="absolute top-[-10px] left-2 px-1 bg-white">
        Username
        </small>
    </div>
    <div class="relative w-full">
      <input type="password"/>
      <small class="absolute top-[-10px] left-2 px-1 bg-white">
        Password
        </small>
    </div>
    <button id="login-button"> login </button>
    <p>------- continue with -------</p>
    <button id="login-google-button">
      <img src={google.src} alt="google" width="24" />
    </button>
    <button id="newaccount-button"> Create new account </button>
  </div>
  <img
    src={ball.src}
    alt="ball"
    width="320"
    class="absolute left-[74px] bottom-[100px] max-xl:hidden"
  />
  <img
    src={ball.src}
    alt="ball"
    width="250"
    class="absolute left-[360px] top-[65px] max-xl:hidden"
  />
  <img
    src={ball.src}
    alt="ball"
    width="300"
    class="absolute right-[164px] bottom-[50px] max-xl:hidden"
  />
</div>
<style>
  #login {
    background: white;
    height: fit-content;
    display: flex;
    padding: 78px 55px 48px 55px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 58px;
    border-radius: 20px;
    box-shadow: 4px 4px 18px 0px rgba(0, 0, 0, 0.2);
  }
  #header {
    color: var(--gibraltar, #143951);
    font-family: monospace;
    font-size: 32px;
    font-style: normal;
    font-weight: 600;
    line-height: 28px; /* 87.5% */
    letter-spacing: -0.16px;
  }
  #login-section {
    display: flex;
    width: 280px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 18px;
  }
  input {
    display: flex;
    padding: 8px 12px 8px 12px;
    width: 100%;
    align-items: center;
    align-self: stretch;
    border-radius: 6px;
    border: 1px solid var(--gibraltar, #143951);
    background: var(--white, #fff);
  }
  #login-button {
    display: flex;
    padding: 8px 16px;
    justify-content: center;
    align-items: center;
    align-self: stretch;
    border-radius: 6px;
    background: #143951;
    color: var(--white, #fff);
    font-family: monospace;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
  }
  #login-google-button {
    display: flex;
    padding: 8px;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
    box-shadow: 4px 4px 18px 0px rgba(0, 0, 0, 0.2);
  }
  #newaccount-button {
    display: flex;
    padding: 8px 16px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    align-self: stretch;
    border-radius: 6px;
    border: 1px solid var(--gibraltar, #143951);
  }
  p {
    font-family: monospace;
    font-size: 16px;
  }
</style>
